<h2>Log in</h2>








<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <br>
<br>
<div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card-group mb-0 shadow">
          <div class="card p-4">
            <div class="card-body">
              <h1>Login</h1>
              <p class="text-muted">Sign In to your account</p>

              <div class="input-group mb-3">
                <div class="field nput-group mb-3">
                <i class="fa fa-user"></i>
                  <%= f.label :email , class: "input-group-addon" %><br/>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Username"%>
                </div>
              </div>
              <div class="input-group mb-4">
                <div class="field">
                  <%= f.label :password, class:"input-group-addon" %><br />
                  <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
                </div>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>


              <div class="row">
                <div class="col-6">
                  

                  <%= f.submit "Log in", class: "btn btn-primary px-4" %>


              <% end %>



                </div>
                <div class="col-6 text-right">
                  <button type="button" class="btn btn-link px-0">Forgot password?</button>
                </div>
              </div>
            </div>
          </div>
          <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
              <div>
                <h2>Sign up</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                <button type="button" class="btn btn-primary active mt-3">Register Now!</button>


              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>





<%= render "devise/shared/links" %>
